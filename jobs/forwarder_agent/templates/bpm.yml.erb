processes:
  - name: forwarder_agent
    executable: /var/vcap/packages/forwarder_agent/forwarder-agent
    env:
      API_CA_FILE_PATH: "/var/vcap/jobs/forwarder_agent/config/certs/api_ca.crt"
      API_CERT_FILE_PATH: "/var/vcap/jobs/forwarder_agent/config/certs/api_client.crt"
      API_KEY_FILE_PATH: "/var/vcap/jobs/forwarder_agent/config/certs/api_client.key"
      API_COMMON_NAME: <%= p("api.tls.cn") %>
      API_URL: <%= "https://#{link("cloud_controller").address}:9023" %>
