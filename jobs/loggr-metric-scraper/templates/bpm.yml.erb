processes:
  - name: loggr-metric-scraper
    executable: /var/vcap/packages/metric-scraper/metric-scraper
    env:
      LOGGREGATOR_AGENT_ADDR: "<%= "localhost:#{link('loggregator').p('metron_endpoint.grpc_port')}" %>"
      CA_CERT_PATH: "/var/vcap/jobs/metric-scraper/config/certs/loggregator_ca.crt"
      CLIENT_CERT_PATH: "/var/vcap/jobs/metric-scraper/config/certs/loggregator_agent.crt"
      CLIENT_KEY_PATH: "/var/vcap/jobs/metric-scraper/config/certs/loggregator_agent.key"
      SCRAPE_INTERVAL: "<%= p('scrape_interval') %>"
      SCRAPE_PORT: "<%= p('scrape_port') %>"
      SOURCE_ID: "<%= "#{spec.job.name}" %>"
